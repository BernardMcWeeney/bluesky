---
import MainLayout from "../layouts/MainLayout.astro";

const packages = [
  {
    name: "Launch",
    tag: "For new ventures",
    description: "Everything you need to get online with a stunning, professional digital presence.",
    features: [
      "Custom homepage + core pages",
      "Responsive design system",
      "Contact & registration forms",
      "Email subscriber setup",
      "Launch support & QA"
    ]
  },
  {
    name: "Growth Platform",
    tag: "Most popular",
    description: "A complete website and mobile app with the full suite of integrated modules.",
    features: [
      "Everything in Launch",
      "Companion mobile app",
      "Events & calendar module",
      "Products showcase",
      "Social connector auto-publishing",
      "Ongoing optimisation support"
    ],
    featured: true
  },
  {
    name: "Enterprise",
    tag: "For complex organisations",
    description: "Custom architecture, advanced integrations, and a dedicated support roadmap.",
    features: [
      "Custom architecture planning",
      "Advanced integrations & automation",
      "Expanded permissions & workflows",
      "Priority support roadmap",
      "Dedicated account manager"
    ]
  }
];
---

<MainLayout title="Services — Bluesky Software" description="Bluesky packages for website, mobile app, and integrated modules. Clear scope, agency-grade design, one integrated system.">

  <!-- Hero -->
  <section class="section">
    <div class="container fade-in">
      <div class="surface soft pad-lg">
        <span class="kicker">Services</span>
        <h1 class="title">Everything your organisation needs, delivered as one platform.</h1>
        <p class="copy">
          Every package includes agency-quality design, a rock-solid technical foundation,
          and the integrated modules that simplify how your team operates.
          Pick the scope that fits your stage — we take care of the rest.
        </p>
        <div class="stats">
          <span class="stat">Website + app</span>
          <span class="stat">All modules included</span>
          <span class="stat">Ongoing support</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Packages -->
  <section class="section tight">
    <div class="container reveal">
      <div class="surface pad">
        <span class="kicker">Packages</span>
        <h2 class="title">Clear scope. No hidden complexity.</h2>
        <p class="copy">
          Every package is fully transparent. You know exactly what's included upfront,
          and we'll help you pick the right fit during a free discovery call.
        </p>
        <div class="grid three">
          {
            packages.map((pkg) => (
              <article class={`card ${pkg.featured ? "featured" : ""}`}>
                <p class="tag">{pkg.tag}</p>
                <h3>{pkg.name}</h3>
                <p>{pkg.description}</p>
                <div class="list">
                  {
                    pkg.features.map((feature) => (
                      <p class="list-item">{feature}</p>
                    ))
                  }
                </div>
              </article>
            ))
          }
        </div>
        <div class="actions">
          <a class="btn" href="/contact">Get a custom quote</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Module deep dive -->
  <section class="section tight">
    <div class="container reveal">
      <div class="surface pad">
        <span class="kicker">Module suite</span>
        <h2 class="title">The building blocks inside every Bluesky platform</h2>
        <p class="copy">
          Your website and mobile app share one content and operations layer. Your team
          updates once and publishes everywhere. Here's what powers it all.
        </p>
        <div class="grid two">
          <article class="card">
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="4" y="2" width="16" height="20" rx="2"/><line x1="8" y1="7" x2="16" y2="7"/><line x1="8" y1="11" x2="16" y2="11"/><line x1="8" y1="15" x2="12" y2="15"/></svg>
            </div>
            <h3>Forms</h3>
            <p>Contact forms, registrations, onboarding flows, surveys — capture any data your organisation needs with smart, well-designed forms.</p>
          </article>
          <article class="card">
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="M2 4l10 8 10-8"/></svg>
            </div>
            <h3>Email Subscribers</h3>
            <p>Build segmented subscriber lists and automatically send digest emails whenever you publish new posts, events, or product updates.</p>
          </article>
          <article class="card">
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2"/><line x1="3" y1="10" x2="21" y2="10"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="16" y1="2" x2="16" y2="6"/></svg>
            </div>
            <h3>Events & Calendar</h3>
            <p>Publish events with times, locations, and full details. Manage schedules across web and app from one unified calendar.</p>
          </article>
          <article class="card">
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 01-8 0"/></svg>
            </div>
            <h3>Products</h3>
            <p>List products, services, or offerings with clean, conversion-optimised layouts. Update once in the dashboard, see changes everywhere.</p>
          </article>
          <article class="card">
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="18" cy="5" r="3"/><circle cx="6" cy="12" r="3"/><circle cx="18" cy="19" r="3"/><line x1="8.59" y1="13.51" x2="15.42" y2="17.49"/><line x1="15.41" y1="6.51" x2="8.59" y2="10.49"/></svg>
            </div>
            <h3>Social Connector</h3>
            <p>Automatically push new content, events, and updates to your social channels. Publish once, reach your full audience.</p>
          </article>
          <article class="card">
            <div class="card-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7" rx="1"/><rect x="14" y="3" width="7" height="7" rx="1"/><rect x="3" y="14" width="7" height="7" rx="1"/><rect x="14" y="14" width="7" height="7" rx="1"/></svg>
            </div>
            <h3>Expandable Modules</h3>
            <p>As your organisation evolves, we design and integrate new modules into your existing platform — seamlessly, without starting over.</p>
          </article>
        </div>
      </div>
    </div>
  </section>

  <!-- How we deliver -->
  <section class="section tight">
    <div class="container reveal">
      <div class="surface soft pad">
        <span class="kicker">How we deliver</span>
        <h2 class="title">A process built for clarity, not confusion</h2>
        <div class="steps">
          <article class="step">
            <span class="step-number">1</span>
            <div>
              <h3>Discovery Call</h3>
              <p>We learn about your organisation, define your requirements, and recommend the right package and modules.</p>
            </div>
          </article>
          <article class="step">
            <span class="step-number">2</span>
            <div>
              <h3>Design & Development</h3>
              <p>We design your brand-led interface and build your website, app, and modules as one integrated system.</p>
            </div>
          </article>
          <article class="step">
            <span class="step-number">3</span>
            <div>
              <h3>Launch & Grow</h3>
              <p>We ship, train your team, and provide ongoing support as you scale and add capabilities.</p>
            </div>
          </article>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section tight">
    <div class="container reveal">
      <div class="cta-banner">
        <span class="kicker on-dark">Let's get started</span>
        <h2>Ready to see what Bluesky can do for your organisation?</h2>
        <p>
          Tell us about your goals and we'll map the perfect package.
          No pressure, no jargon — just a straightforward conversation.
        </p>
        <div class="actions">
          <a class="btn-white" href="/contact">Book a discovery call</a>
        </div>
      </div>
    </div>
  </section>

</MainLayout>
